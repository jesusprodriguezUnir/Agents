{
  "name": "MCP Server",
  "description": "Model Context Protocol Server with Streamlit frontend",
  "image": "heroku/python",
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "env": {
    "PYTHONPATH": {
      "description": "Python path for imports",
      "value": "/app"
    },
    "LOG_LEVEL": {
      "description": "Logging level",
      "value": "INFO"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "free"
    }
  }
}